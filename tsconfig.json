{
  "include": [
    "app/**/*",
    "client/src/**/*",
    "shared/**/*",
    "lib/**/*",
    "components/**/*",
    "contexts/**/*",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.test.ts",
    ".next"
  ],
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./client/src/*",
        "./lib/*",
        "./app/*",
        "./*"
      ],
      "@shared/*": [
        "./shared/*"
      ],
      "@/server/*": [
        "./server/*"
      ],
      "@/lib/*": [
        "./lib/*"
      ]
    }
  }
}
